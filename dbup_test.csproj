<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>false</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="migrations/*.sql">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="Copy files for DbUp DeployChanges WithScriptsFromFileSystem" AfterTargets="AfterBuild">
    <Copy SourceFiles="@(EmbeddedResource)" DestinationFolder="$(OutDir)/SQLScripts" SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup>
    <PackageReference Include="DbUp-postgresql" Version="4.6.3" />
    <PackageReference Include="DbUp-sqlite" Version="4.6.0" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="6.0.6" />
    <PackageReference Include="Npgsql" Version="6.0.5" />
  </ItemGroup>

</Project>